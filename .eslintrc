{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "quotes": [2, "backtick"],
    "semi": [2, "always"],
    "linebreak-style": [2, "windows"],
    "max-len": [2, 85]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended"
}
